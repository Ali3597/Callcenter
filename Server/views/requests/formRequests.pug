h1 Créer un nouveau #{titleForm}
div.form-style-7
     ul  
        li
            label Client
            if selectedCustomer
                input(type='hidden' value=selectedCustomer._id readonly) 
                h3 #{selectedCustomer.name}// #{selectedCustomer.number}
            else
                select(name="customer")
                    each customer in customers 
                        option(value=customer._id) #{customer.name}// #{customer.number}
        li
            label message 
            input(type='textarea' name='message' )  
        li
            label type
            select(name="typeof")
                option(disabled selected value) -- select an option -- 
                option(value="Call") Call
                option(value="Email") Email 
                option(value="Other") Other  
        li
            label Niveau d'urgence
            select(name="urgencyLevel")
                option(disabled selected value) -- select an option -- 
                option(value=1) 1
                option(value=2) 2
                option(value=3) 3
                option(value=4) 4
                option(value=5) 5  
        li
            label deadline
            input(type="datetime-local" name="deadline" )
        input( id="sendNew" type='submit' value='Créer')
p(class="formError")



