table(type="customers")


  caption=titleCalls 

  if calls 
    thead

        tr
            each tab in callTableFormat
                th(scope='col') #{tab}
              
    tbody
        each call in calls 
          if call.customer==null 
            tr
              td Numero Inconnu 
              td=call.number
              td=properStringDate(call.date)
              td=call.state
              td=call.time
              td None
          else 
            tr(id=call.customer._id)
              td=call.customer.name
              td=call.number
              td=properStringDate(call.date)
              td=call.state
              td=call.time
              td(id="consult") Consultez le client 
if pageNumberCalls>1
  .pagination
    .pagination-container
      .pagination-hover-overlay
      a.pagination-prev(href='#0')
        span.icon-pagination.icon-pagination-prev
            i(class="fas fa-arrow-left")
      each i in range(1,pageNumberCalls)
          if page==i
            a.pagination-page-number.active=i 
          else 
            a.pagination-page-number=i 
      a.pagination-next
        span.icon-pagination.icon-pagination-next
            i(class="fas fa-arrow-left")

