.pagination
  .pagination-container
    .pagination-hover-overlay
    a.pagination-prev(href='#0')
      span.icon-pagination.icon-pagination-prev
          i(class="fas fa-arrow-left")
    each i in range(1,pageNumber)
        a.pagination-page-number(href='#0')=i 
    a.pagination-next(href='#0')
      span.icon-pagination.icon-pagination-next
          i(class="fas fa-arrow-left")
