table
  caption=title 
  thead

      tr
          each tab in reportsTableFormat
              th(scope='col') #{tab}
              
  tbody
      each report in reports  
          tr
            td(id="customerNameProfile")=report.request.customer.name 
            td=subMessage(80,report.message)
            td=properStringDate(report.date)
            td Action 
