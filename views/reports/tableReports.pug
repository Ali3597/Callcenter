table(type="reports")
  caption=titleReports 
  thead

      tr
          each tab in reportsTableFormat
              th(scope='col') #{tab}
              
  tbody
      each report in reports  
          tr(id=report._id)
            td=report.author.username 
            td=subMessage(80,report.message)
            td=properStringDate(report.date)
            td(id="consult") Consultez
if pageNumberReports>1
  .pagination
    .pagination-container
      .pagination-hover-overlay
      a.pagination-prev(href='#0')
        span.icon-pagination.icon-pagination-prev
            i(class="fas fa-arrow-left")
      each i in range(1,pageNumberReports)
          a.pagination-page-number(href='#0')=i 
      a.pagination-next(href='#0')
        span.icon-pagination.icon-pagination-next
            i(class="fas fa-arrow-left")
