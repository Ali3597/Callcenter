table(type="customers")
  caption=titleCustomers  
  if customers
    thead

        tr
            each tab in customerTableFormat
                th(scope='col') #{tab}
              
    tbody
        each customer in customers  
            tr(id=customer._id)
              td(class="tdImageName")
                img(src=customer.avatar class=("imgAvatar") )
                p=customer.name 
              td  
                div(class="makeCall")
                  span=customer.number
                  i(class="fas fa-phone")
              td=customer.email
              td(id="consult") Consultez
  if pageNumberCustomers>1
    .pagination
      .pagination-container
        .pagination-hover-overlay
        a.pagination-prev(href='#0')
          span.icon-pagination.icon-pagination-prev
             i(class="fas fa-arrow-left")
        each i in range(1,pageNumberCustomers)
            a.pagination-page-number(href='#0')=i 
        a.pagination-next(href='#0')
          span.icon-pagination.icon-pagination-next
              i(class="fas fa-arrow-left")
