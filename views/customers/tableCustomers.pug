table
  caption Statement Summary
  thead

      tr
          each tab in customerTableFormat
              th(scope='col') #{tab}
              
  tbody
      each customer in customers  
          tr
            td
                img(src=customer.avatar class=("imgAvatar") )
            td=customer.name 
            td=customer.number
            td=customer.email
            td Action 
